struct Counter {
    value: i32,
}

impl Counter {
    fn new() -> Self {
        Counter { value: 0 }
    }

    fn inc(&mut self) {
        self.value = self.value + 1;
    }

    fn current(&self) -> i32 {
        self.value
    }
}

fn main() {
    let mut counter: Counter = Counter::new();
    counter.inc();
    let now: i32 = counter.current();
    exit(0);
}
